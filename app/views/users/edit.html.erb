<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px5 px-sm-0 mx-auto">
      <h1>User info</h1>
      <%= form_with model:@user, local:true do |f| %>
      <label for="inputName">Name</label>
      <div><%= f.text_field :name, autofocus: true, id:"inputName"%></div>
      <div><label for="inputImage">Image</label></div>
      <%= f.attachment_field :profile_image, placeholder: "プロフィール画像" %>
      <div><label for="inputBody">Introduction</label></div>
      <%= f.text_area :introduction, autofocus: true, id:"inputBody"%>
      <div><%= f.submit "Update User", class: 'btn btn-secondary' %></div>
      <% end %>
   </div>
  </div>
</div>