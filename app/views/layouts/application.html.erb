<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2App</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
  <body>
    <header>
      <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container">
          <%= link_to "Bookers", '/', class: 'navbar-brand' %>
        </div>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="#navbarNavDropdown" aria-expand="true" aria-label="Toggle navgation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="navbar-collapse collapse show" id="navbarNavDropdown" style>
          <ul class="navbar-nav ml-auto">
            <% if user_signed_in? %>
            <li>
              <%= link_to "Home", user_path(current_user), class: "fa fa-home" %>
            </li>
            <li>
              <%= link_to "Users", users_path, class: "fa fa-users" %>
            </li>
            <li>
              <%= link_to "Books", books_path, class: "fa fa-book" %>
            </li>
            <li>
              <%= link_to "logout", destroy_user_session_path, method: :delete, class: "fa fa-sign-out"  %>
            </li>
              <% else %>
            <li>
              <%= link_to "Home", '/', class: "fa fa-home" %>
            </li>
            <li>
              <%= link_to "About", homes_about_path, class: "fa fa-link" %>
            </li>
            <li>
              <%= link_to "sign up", new_user_registration_path, class: "fa fa-user-plus" %>
            </li>
            <li>
              <%= link_to "login", new_user_session_path, class: "fa fa-sign-in" %>
            </li>
              <% end %>
          </ul>
        </div>
      </nav>
      <span class="notice"><%= notice %></span>
      <span class="alert"><%= alert %></span>
  　</header>
　　<%= yield %>
  　<footer>
   　  <div class="container mt-5">
        <div class="row">
          <div class="mx-auto">
            <p>CopyRight Infratop.inc</p>
          </div>
        </div>
      </div>
    </footer>
  </body>
</html>
