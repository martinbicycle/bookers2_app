<div class="container">
  <div class="row">
    <div class="col-lg-3">
      <h2>User info</h2>
       <p><%= attachment_image_tag @user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg" %></p>
      <table class="table">
        <th>
          <tr>name</tr>
          <%= @user.name %></br>
          <tr>introduction</tr>
          <%= @user.introduction %>
        </th>
      </table>

      <p><%= link_to "プロフィール編集", edit_user_path(@user) %></p>


      <h2>New Book</h2>
      <%= form_with model: @book, local:true do |f| %>
        <h4>Title</h4>
        <%= f.text_field :title %>
        <h4>Opinion</h4>
        <%= f.text_area :body %>
        <div><%= f.submit 'Create Book' %></div>
      <% end %>
    </div>

    
    <div class="col-lg-9">
      <table class="table">
        <h2>Books</h2>
        <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
          </tr>
        </thead>
        <tbody>
          <% @books.each do |book| %>
          <tr>
            <td><%= attachment_image_tag @user, :profile_image, :fill, 40, 40, format: 'jpeg', fallback: "no_image.jpg" %></td>
            <td><%= link_to book.title, book_path(book.id)  %></td>
            <td><%= book.body %></td>
          </tr>
          <% end %>
        </tbody>
      </table>

    </div>
  </div>
</div>



<% @books.each do |book| %>
<div>
  <p><%= book.user.name %></p>
  <%= link_to book_path(book.id) do %>
  <p>Title：<%= book.title %></p>
  <% end %>
  <p>Opinion：<%= book.body %></p>
</div>
<% end %>