<h1>User info</h1>
 <p><%= attachment_image_tag @user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg" %></p>
<table>
  <th>
    <tr>name</tr></br>
    <tr>introduction</tr>
  </th>
</table>
    <p><%= link_to "プロフィール編集", edit_user_path(@user) %></p>



<h1>New Book</h1>
<%= form_with model: @book, local:true do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>
  <h4>Opinion</h4>
  <%= f.text_area :body %>
  <div><%= f.submit 'Create Book' %></div>
<% end %>


<% @books.each do |book| %>
<div>
  <p><%= book.user.name %></p>
  <%= link_to book_path(book.id) do %>
  <p>Title：<%= book.title %></p>
  <% end %>
  <p>Opinion：<%= book.body %></p>
</div>
<% end %>