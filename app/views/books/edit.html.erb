<div class="container">
  <div class="row">
    <div class="col-sm12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h1>Editing Book</h1>
      <% if @book.errors.any? %>
      <div id="error_explanation" class="alert alert-danger">
        <ul>
          <% @book.errors.full_messages.each do |message| %>
          <li>error!<%= message %></li>
          <% end %>
        </ul>
      </div>
      <% end %>
      <%= form_with model:@book, local: true do |f| %>
      <p>Title<p>
      <%= f.text_field :title %>
      <p>Opinion</p>
      <%= f.text_area :body %>
      <div><%= f.submit 'Update Book', class: 'btn btn-success' %></div>
      <% end %>
      <%= link_to "Show", book_path %>
      |
      <%= link_to "Back", books_path %>
    </div>
  </div>
</div>