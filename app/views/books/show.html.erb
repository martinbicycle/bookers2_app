<div class="container">
  <div class="row">
    <div class="col-lg-3">
      <h2>User info</h2>
      <p><%= attachment_image_tag @user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg" %></p>
      <table class="table">
        <tr>
          <th>name</th>
          <th><%= @user.name %></th>
        </tr>
        <tr>
          <th>introduction</th>
          <th><%= @user.introduction %></th>
        </tr>
      </table>
      <div class="row">
        <% if @user.id == current_user.id %>
        <%= link_to "編集のアイコン", edit_user_path(@user), class: 'btn btn-outline-secondary btn-block' %>
        <% else %>
        <%= link_to "編集のアイコン", user_path(current_user), class: 'btn btn-outline-secondary btn-block' %>
        <% end %>
      </div>
      <h2>New Book</h2>
      <% if @book_new.errors.any? %>
      <div id="error_explanation" class="alert alert-danger">
        <ul>
          <% @book_new.errors.full_messages.each do |message| %>
          <li>error!<%= message %></li>
          <% end %>
        </ul>
      </div>
      <% end %>
      <%= form_with model: @book_new, local:true do |f| %>
      <h4>Title</h4>
      <%= f.text_field :title %>
      <h4>Opinion</h4>
      <%= f.text_area :body %>
      <div><%= f.submit 'Create Book', class: 'btn btn-success'%></div>
      <% end %>
    </div>
    <div class="col-lg-9">
      <table class="table">
        <h2>Book detail</h2>
        <tbody>
          <tr>
            <td><%= attachment_image_tag @user, :profile_image, :fill, 40, 40, format: 'jpeg', fallback: "no_image.jpg" %><%=link_to @book.user.name, user_path(@user)%></td>
            <td><%=link_to @book.title, book_path(@book) %></td>
            <td><%= @book.body %></td>
            <td>
              <% if @book.user == current_user %>
              <%= link_to "Edit", edit_book_path(@book), class: 'btn btn-success'%>
            　<% end %>
            </td>
            <td>
              <% if @book.user == current_user %>
              <%= link_to "Destroy", book_path(@book), class: 'btn btn-danger' ,method: :delete, "data-confirm" => "本当に消しますか？"%>
              <% end %>
            </td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>
