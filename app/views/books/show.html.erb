 <div class="container">
   <div class="row">
    <div class="col-lg-3">
        <h1>User info</h1>
         <p><%= attachment_image_tag @user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg" %></p>
        <table>
          <th>
            <tr>name</tr></br>
            <tr>introduction</tr>
          </th>
        </table>
            <p><%= link_to "プロフィール編集", edit_user_path(@user) %></p>
        <h1>New Book</h1>
        <%= form_with model: @book, local:true do |f| %>
          <h4>Title</h4>
          <%= f.text_field :title %>
          <h4>Opinion</h4>
          <%= f.text_area :body %>
          <div><%= f.submit 'Create Book' %></div>
        <% end %>
     </div>


     <div class="col-lg-9">
       <table class="table">
          <h2>Book detail</h2>
          <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
          </tr>
        </thead>
        <tbody>
             <%= @book.user.name %>
          <p><%= @book.title %></p>
          <p><%= @book.body %></p>

          <% if @book.user == current_user %>
            <%= link_to "Destroy", book_path(@book), method: :delete %>
          <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>